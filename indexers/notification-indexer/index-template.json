{
    "mappings": {
        "_default_": {
            "dynamic_templates": [
                {
                    "string_fields": {
                        "mapping": {
                            "fields": {
                                "raw": {
                                    "ignore_above": 256,
                                    "index": "not_analyzed",
                                    "type": "string"
                                }
                            },
                            "index": "analyzed",
                            "omit_norms": true,
                            "type": "string"
                        },
                        "match": "*",
                        "match_mapping_type": "string"
                    }
                }
            ],
            "properties": {
                "@version": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "geoip": {
                    "dynamic": true,
                    "path": "full",
                    "properties": {
                        "location": {
                            "type": "geo_point"
                        }
                    },
                    "type": "object"
                }
            }
        }
    },
    "settings": {
        "index.refresh_interval": "5s",
        "index.route.allocation.exclude.tag":"crawlerdata"
    },
     "aliases" : {
        "<KAFKA_TOPIC>-today" : {},
        "<KAFKA_TOPIC>-7d" : {},
        "<KAFKA_TOPIC>-30d" : {}
    },
    "template": "<KAFKA_TOPIC>-*"
}
