        $VASTAT_REPORTER_CONT \
        $TIMEMACHINE_CONT \
        $IMAGE_RESCANNER_CONT \
        $CONFIG_AND_METRICS_CRAWLER_CONT \
        $METRICS_SERVER_CONT\
        $MASTER_METRICS_SERVER_CONT \
        $MT_LOGSTASH_FORWARDER_CONT)

DEPLOYMENT_IMAGES=($ES_IMG $KAFKA_IMG $CONSUL_IMG \
        $INDEXER_IMG $GENERIC_INDEXER_IMG \
        $NOTIFICATION_INDEXER_IMG \
        $SEARCH_IMG $CONFIG_PARSER_IMG \
