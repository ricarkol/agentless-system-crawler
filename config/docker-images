CONFIG_PARSER_CONT="cloudsight-config-parser"
COMPLIANCE_INDEXER_CONT="cloudsight-compliance-indexer"
COMPLIANCE_ANNOTATOR_CONT="cloudsight-compliance-annotator"
VULNERABILITY_INDEXER_CONT="cloudsight-vulnerability-indexer"
VULNERABILITY_ANNOTATOR_CONT="cloudsight-vulnerability-annotator"
NOTIFICATION_PROCESSOR_CONT="cloudsight-notification-processor"
NOTIFICATION_INDEXER_CONT="cloudsight-notification-indexer"
USNCRAWLER_CONT="cloudsight-usncrawler"
REGISTRY_UPDATE_CONT="cloudsight-registry-update"
REGISTRY_MONITOR_CONT="cloudsight-registry-monitor"
