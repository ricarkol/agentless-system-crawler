        $PASSWORD_ANNOTATOR_IMG \
        $VASTAT_REPORTER_IMG \
        $TIMEMACHINE_IMG \
        $IMAGE_RESCANNER_IMG \
        $CONFIG_AND_METRICS_CRAWLER_IMG \
        $METRICS_SERVER_IMG \
        $MASTER_METRICS_SERVER_IMG \
