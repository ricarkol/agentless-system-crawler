{
    "mappings": {
        "_default_": {
            "properties": {
                "@version": { "type": "string", "index": "not_analyzed" },
                "site": { "type": "string", "index": "not_analyzed" },
                "id": { "type": "string", "index": "not_analyzed" },
                "summary": { "type": "string", "index": "analyzed" },
                "fixes" : {
		            "properties" : {
                        "os" : {
                            "type": "object",
	                        "properties" : {
		                        "name": { "type" : "string" },
		                        "verion" : { "type" : "string"},
		                        "architecture" : { "type" : "string" },
		                        "distribution" : { "type" : "string" }
	                        }
	                    },
                        "packages": {
                            "properties": {
                                "name": { "type": "string" },
                                "version" : { "type" : "string" },
                                "release" :  { "type" : "string" }
                                }
                            }
                    }
                }
            }
        }
    },
    "settings": {
    "index.refresh_interval": "5s"
    },
    "template": "security_notices*"
}
